
<template>
    <div id="app">
        <p>{count}</p>
        <button :click="count_up">+</button>
        <button :click="count_down">-</button>
    </div>
</template>

<style scoped>
button {
    color: white;
}
</style>

<python>
class Component:
    def data():
        return {
            "count": 0
        }

    @Component.method
    def count_up(self, event):
        self.count += 1

    @Component.method
    def count_down(self, event):
        if self.count > 0:
            self.count -= 1
</python>
